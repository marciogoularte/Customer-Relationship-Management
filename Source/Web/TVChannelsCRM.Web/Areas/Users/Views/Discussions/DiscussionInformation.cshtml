@using TVChannelsCRM.Web.Areas.Users.ViewModels.Discussions
@model DiscussionViewModel
@{
    ViewBag.Title = "Activities Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="table-responsive">
    <table class="table table-condensed table-responsive table-user-information">
        <tbody>
            <tr>
                <td>
                    <strong>
                        Date
                    </strong>
                </td>
                <td>
                    @Model.Date
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        Subject of discussion
                    </strong>
                </td>
                <td>
                    @Model.SubjectOfDiscussion
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        Summary
                    </strong>
                </td>
                <td>
                    @Model.Summary
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-user"></span>
                        Type
                    </strong>
                </td>
                <td>
                    @Model.Type
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-user"></span>
                        Comments
                    </strong>
                </td>
                <td>
                    @Model.Comments
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-user"></span>
                        Next activity date
                    </strong>
                </td>
                <td>
                    @Model.NextDiscussionDate
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-user"></span>
                        Next activity note
                    </strong>
                </td>
                <td>
                    @Model.NextDiscussionNote
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-user"></span>
                        Next activity type
                    </strong>
                </td>
                <td>
                    @Model.NextDiscussionType
                </td>
            </tr>
        </tbody>
    </table>
</div>