@model DateTime?

@{
    var culture = System.Globalization.CultureInfo.CurrentCulture.ToString();
}

<script src="@Url.Content("~/Scripts/kendo/cultures/kendo.culture." + culture + ".min.js")"></script>

<script>
    kendo.culture("@culture");
</script>

@(Html.Kendo().DatePickerFor(m => m)
        .Culture(culture)
)