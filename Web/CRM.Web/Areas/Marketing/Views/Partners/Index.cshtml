<style type="text/css">
    #content {
        min-height: 600px;
    }
</style>

<h2>Partners</h2>



<div id="example" class="k-content">
    <div class="wrapper">
        @(Html.Kendo().TabStrip()
              .Name("tabstrip")
              .TabPosition(TabStripTabPosition.Top)
              .Animation(animation =>
              {
                  animation.Open(config =>
                  {
                      config.Fade(FadeDirection.In);
                  });
              })
              .SelectedIndex(0)
              .Items(tabstrip =>
              {
                  tabstrip.Add().Text("Media")
                      .Selected(true)
                      .LoadContentFrom(Url.Action("AllMedia", "Media", null));

                  tabstrip.Add().Text("Opertors")
                      .LoadContentFrom(Url.Action("AllOperators", "Operators", null));

                  tabstrip.Add().Text("PRs")
                      .LoadContentFrom(Url.Action("AllPrs", "Prs", null));

                  tabstrip.Add().Text("Others")
                      .LoadContentFrom(Url.Action("AllMarketingPartners", "MarketingPartners", null));
              })
        )
    </div>
</div>

<style>
    .wrapper {
        margin: 20px auto;
    }

    .specification {
        margin: 10px 0;
        padding: 0;
        overflow: auto;
    }

        .specification dt, dd {
            margin: 0;
            padding: 5px 0 7px 0;
            border-top: 1px solid rgba(0, 0, 0, 0.3);
        }

        .specification dt {
            margin-right: 7px;
            padding-right: 0;
            opacity: 0.7;
        }

        .specification:after, .wrapper:after {
            content: "";
            visibility: hidden;
        }
</style>