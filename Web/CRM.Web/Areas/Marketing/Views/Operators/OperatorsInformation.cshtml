@using CRM.Services.Data.ViewModels.Marketing.Partners
@model OperatorViewModel
@{
    ViewBag.Title = "Operator";
}

<h2>Operator Information</h2>

<div class="table-responsive">
    <table class="table table-condensed table-responsive table-user-information">
        <tbody>
            <tr>
                <td>
                    <strong>
                        Name
                    </strong>
                </td>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        Address
                    </strong>
                </td>
                <td>
                    @Model.Address
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        Phone Number
                    </strong>
                </td>
                <td>
                    @Model.PhoneNumber
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-user"></span>
                        Email
                    </strong>
                </td>
                <td>
                    @Model.Email
                </td>
            </tr>
            <tr>
                <td>
                    <strong>
                        <span class="glyphicon glyphicon-user"></span>
                        Media
                    </strong>
                </td>
                <td>
                    @Model.Media
                </td>
            </tr>
        </tbody>
    </table>
</div>