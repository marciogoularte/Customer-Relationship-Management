@using CRM.Services.Data.ViewModels.Users.ManageUser
@model ManageUserViewModel
@{
    ViewBag.Title = "Manage user data";
}


@using (Html.BeginForm("ManageUserData", "ManageUser", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Edit personal details.</h4>
    <hr />
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@

